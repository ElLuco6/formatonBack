generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id            Int      @id @default(autoincrement()) // Identifiant unique
  type          String   @db.VarChar(100)              // Type de session (ex. Cours, Atelier)
  date          DateTime // Date de la session
  formationId   Int      // Lien vers la formation associée
  formation     Formation @relation(fields: [formationId], references: [id]) // Relation avec Formation
  nbEleves      Int      // Nombre d'élèves inscrits (calculé automatiquement)
  eleves        Eleve[]   // Liste des élèves inscrits à cette session
}

model Eleve {
  id             Int      @id @default(autoincrement())
  nom            String   // Nom de l'élève
  sessionId      Int      // Lien vers la session associée
  session        Session  @relation(fields: [sessionId], references: [id]) // Relation inverse avec Session
}

model Formation {
  id              Int       @id @default(autoincrement())
  title           String    @db.VarChar(255)
  type            String    @db.VarChar(100)
  duration        String?   @db.VarChar(50) // Changement de Int à String
  description     String?
  price           Decimal   @db.Decimal(10, 2)
  registeredNames String[]  @default([]) @map("registered_names")
  createdAt       DateTime  @default(now()) @map("created_at")
  sessions        Session[] // Relation avec Session
}
